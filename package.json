{
  "name": "mini-apps-template",
  "version": "1.1.1",
  "main": "index.js",
  "repository": "https://github.com/wolframdeus/mini-apps-template.git",
  "author": "Vladislav Kibenko <wolframdeus@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@apollo/react-hooks": "^4.0.0",
    "@material-ui/styles": "^4.11.3",
    "@types/classnames": "^2.2.11",
    "@types/graphql": "^14.5.0",
    "@types/history": "^4.7.8",
    "@types/node": "^14.14.32",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.2",
    "@types/react-redux": "^7.1.16",
    "@types/react-scroll": "^1.8.2",
    "@types/react-transition-group": "^4.4.1",
    "@vkontakte/icons": "^1.82.0",
    "@vkontakte/vk-bridge": "^2.4.1",
    "@vkontakte/vkjs": "^0.20.0",
    "apollo-cache-inmemory": "^1.6.6",
    "apollo-client": "^2.6.10",
    "apollo-link": "^1.2.14",
    "apollo-link-http": "^1.5.17",
    "apollo-link-ws": "^1.0.20",
    "apollo-utilities": "^1.3.4",
    "chalk": "^4.1.0",
    "classnames": "^2.2.6",
    "customize-cra": "^1.0.0",
    "dotenv": "^8.2.0",
    "eruda": "^2.4.1",
    "history": "^5.0.0",
    "qs": "^6.9.6",
    "react": "^17.0.1",
    "react-app-rewired": "^2.1.8",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.2",
    "react-scripts": "^4.0.3",
    "react-scroll": "^1.8.2",
    "react-transition-group": "^4.4.1",
    "redux": "^4.0.5",
    "redux-devtools-extension": "^2.13.9",
    "subscriptions-transport-ws": "^0.9.18",
    "typescript": "~4.2.3",
    "unionize": "^3.1.0",
    "vkma-router": "^1.2.2",
    "vkma-ui": "^1.4.3"
  },
  "scripts": {
    "check-env:dev": "cross-env DEPLOY_ENV=development.local node prebuild.js",
    "check-env:prod": "cross-env DEPLOY_ENV=production node prebuild.js",
    "start:http": "yarn check-env:dev && cross-env PORT=10889 react-scripts start",
    "start:https": "yarn check-env:dev && cross-env HTTPS=true PORT=10888 react-scripts start",
    "tunnel": "ngrok http --region eu 10889",
    "build": "yarn check-env:prod && react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "deploy": "vk-miniapps-deploy",
    "rollout": "yarn build && yarn deploy",
    "lint": "eslint src/**/*.{ts,tsx}",
    "commit": "git-cz",
    "validate": "npm-run-all lint",
    "prerelease": "yarn validate",
    "release": "standard-version -a",
    "release:tags": "git push --follow-tags origin master",
    "release:github": "dotenv -e .conventional.env -- conventional-github-releaser -p eslint",
    "postrelease": "npm-run-all release:*"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.0",
    "@commitlint/config-conventional": "^12.1.0",
    "@types/qs": "^6.9.6",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "@vkontakte/vk-miniapps-deploy": "^0.0.25",
    "commitizen": "^4.2.3",
    "conventional-github-releaser": "^3.1.5",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv-cli": "^4.0.0",
    "eslint": "^7.21.0",
    "eslint-plugin-react": "^7.22.0",
    "husky": "^5.1.3",
    "lint-staged": "^10.5.4",
    "ngrok": "^3.4.0",
    "npm-run-all": "^4.1.5",
    "standard-version": "^9.1.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix"
    ]
  }
}
